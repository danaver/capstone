<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/data_background">

    <ImageButton
        android:id="@+id/imgfx"
        android:layout_width="470dp"
        android:layout_height="365dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:scaleType="fitXY"/>



    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="500dp">

        <TextView
            android:id="@+id/cebTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="165dp"
            android:fontFamily="@font/boogaloo"
            android:hint="Enter an english word"
            android:inputType="textPersonName"
            android:text="Cebuano"
            android:textAlignment="center"
            android:textColor="@color/yellor"
            android:textSize="80dp" />

        <TextView
            android:id="@+id/pru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/cebTxt"
            android:fontFamily="@font/boogaloo"
            android:text="[Pronounciation]"
            android:textColor="@android:color/white"
            android:textSize="35dp" />

        <Button
            android:id="@+id/audio"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_below="@+id/pru"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/audio_speaker" />
    </RelativeLayout>


    <Button
        android:id="@+id/back"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="440dp"
        android:background="@drawable/back" />


</RelativeLayout>