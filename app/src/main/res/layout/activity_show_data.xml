<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/data_background">

    <ImageButton
        android:id="@+id/imgfx"
        android:layout_width="481dp"
        android:layout_height="393dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginLeft="-395dp"
        android:layout_marginTop="30dp"
        android:background="@null" />

    <Button
        android:id="@+id/audio"
        android:layout_width="75dp"
        android:layout_height="80dp"
        android:layout_marginLeft="720dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/audio_speaker" />

    <TextView
        android:id="@+id/cebTxt"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="690dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:fontFamily="@font/boogaloo"
        android:hint="Enter an english word"
        android:inputType="textPersonName"
        android:text="Cebuano"
        android:textAlignment="center"
        android:textColor="#ffff00"
        android:textSize="80dp" />

    <TextView
        android:id="@+id/pru"
        android:layout_width="-200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="710dp"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/boogaloo"
        android:text="[Pronounciation]"
        android:textColor="#FFFFFF"
        android:textSize="35dp" />

    <Button
        android:id="@+id/back"
        android:layout_width="68dp"
        android:layout_height="65dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="412dp"
        android:background="@drawable/back" />


</RelativeLayout>