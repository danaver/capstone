<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/data_background">

    <ImageButton
        android:id="@+id/imgfx"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_alignStart="@+id/audio"
        android:layout_marginHorizontal="60dp"
        android:layout_marginStart="-388dp"
        android:layout_marginTop="30dp"
        android:background="@null"
        />

    <Button
        android:id="@+id/audio"
        android:layout_width="69dp"
        android:layout_height="62dp"
        android:layout_marginLeft="500dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/audio_speaker" />

    <TextView
        android:id="@+id/cebTxt"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="430dp"
        android:ems="10"
        android:fontFamily="@font/boogaloo"
        android:hint="Enter an english word"
        android:inputType="textPersonName"
        android:text="Cebuano"
        android:textAlignment="center"
        android:textColor="#ffff00"
        android:textSize="70dp" />

    <TextView
        android:id="@+id/pru"
        android:layout_width="-200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/audio"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/boogaloo"
        android:text="[Pronounciation]"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />


</RelativeLayout>