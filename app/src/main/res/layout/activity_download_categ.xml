            android:layout_marginTop="115dp"
            android:background="@drawable/delete" />

        <Button
            android:id="@+id/delevent"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="365dp"
            android:layout_marginTop="115dp"
            android:background="@drawable/delete" />

        <Button
            android:id="@+id/delfood"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="465dp"
            android:layout_marginTop="115dp"
            android:background="@drawable/delete" />

        <Button
            android:id="@+id/delnumber"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="59dp"
            android:layout_marginTop="275dp"
            android:background="@drawable/delete" />

        <Button
            android:id="@+id/delperson"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="275dp"
            android:background="@drawable/delete" />

        <Button
            android:id="@+id/delplace"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="265dp"
            android:layout_marginTop="275dp"
            android:background="@drawable/delete" />

        <Button
            android:id="@+id/delthing"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="365dp"
            android:layout_marginTop="275dp"
            android:background="@drawable/delete" />

        <Button
            android:id="@+id/delverb"
            android:layout_width="34dp"
