            android:layout_marginTop="115dp"
            android:background="@drawable/download" />

        <Button
            android:id="@+id/animal"
            android:layout_width="36dp"
            android:layout_height="33dp"
            android:layout_marginLeft="126dp"
            android:layout_marginTop="115dp"
            android:background="@drawable/download" />

        <Button
            android:id="@+id/body"
            android:layout_width="36dp"
            android:layout_height="33dp"
            android:layout_marginLeft="226dp"
            android:layout_marginTop="115dp"
