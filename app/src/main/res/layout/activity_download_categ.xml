<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DownloadCateg"
    android:padding="20dp"
    android:background="@drawable/data_background"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DOWNLOAD PACKAGE"
        android:textColor="@color/dirty"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp">

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:background="@drawable/box"
            android:layout_width="600dp"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:textSize="30dp"
                android:text="Noun Set"
                android:textColor="@color/dirty"/>

            <Button
                android:id="@+id/noun"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/buttondl"
                android:layout_centerVertical="true"
                android:text="Download"
                android:layout_marginLeft="250dp"
                />
            <Button
                android:id="@+id/delnoun"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/del1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="490dp"
                />
            <Button
                android:id="@+id/viewnoun"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/buttonview"
                android:layout_centerVertical="true"
                android:text="view"
                android:layout_marginLeft="360dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="80dp"
            android:background="@drawable/box"
            android:layout_width="600dp"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:textSize="30dp"
                android:text="Verb Set"
                android:textColor="@color/dirty"/>

            <Button
                android:id="@+id/verb"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/buttondl"
                android:layout_centerVertical="true"
                android:text="Download"
                android:layout_marginLeft="250dp"
                />
            <Button
                android:id="@+id/delverb"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/del1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="490dp"
                />
            <Button
                android:id="@+id/viewverb"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/buttonview"
                android:layout_centerVertical="true"
                android:text="view"
                android:layout_marginLeft="360dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="145dp"
            android:background="@drawable/box"
            android:layout_width="600dp"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:textSize="30dp"
                android:text="Adjective Set"
                android:textColor="@color/dirty"/>

            <Button
                android:id="@+id/adjective"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/buttondl"
                android:layout_centerVertical="true"
                android:text="Download"
                android:layout_marginLeft="250dp"
                />
            <Button
                android:id="@+id/deladjective"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/del1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="490dp"
                />
            <Button
                android:id="@+id/viewadj"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/buttonview"
                android:layout_centerVertical="true"
                android:text="view"
                android:layout_marginLeft="360dp"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/main"
            android:background="@drawable/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="490dp"
            android:text="Menu"/>



    </RelativeLayout>

</RelativeLayout>