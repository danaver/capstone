<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".backend.AddData"
    android:layout_marginLeft="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text Visual"/>
    <EditText
        android:layout_marginTop="40dp"
        android:id="@+id/engtb"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="Enter English Word" />
    <EditText
        android:layout_marginTop="80dp"
        android:id="@+id/bistb"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="Enter Bisaya Word" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Audio Visual"
        android:layout_marginTop="120dp"/>
    <Button
        android:id="@+id/recstart"
        android:layout_marginTop="140dp"
        android:layout_width="70dp"
        android:layout_height="50dp"

        android:text="START"/>
    <Button
        android:id="@+id/recstop"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="70dp"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:text="STOP"/>

    <Button
        android:id="@+id/play"
        android:layout_marginTop="190dp"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:text="PLAY"/>
    <Button
        android:id="@+id/pause"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="70dp"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:text="PAUSE"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:text="Attach Audio"/>
    <Button
        android:id="@+id/attach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File"
        android:layout_marginTop="270dp"/>
    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="325dp"
        android:text=""/>

    <ImageView
        android:id="@+id/image"
        android:background="@drawable/cam"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="340dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:onClick="menu"
        android:layout_marginLeft="250dp"/>
    <Button
        android:id="@+id/addData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD DATA"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="450dp"/>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="111dp" />


</RelativeLayout>