<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    android:background="@drawable/bg2"
    tools:context=".backend.AddData"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/dirty"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/attach"
        android:id="@+id/info_audio"/>

    <Button
        android:background="@drawable/button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Effect"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/info_audio"
        android:id="@+id/attach_effect"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Text Visual"
        android:textColor="@color/dirty"
        android:layout_marginLeft="100dp"
        android:fontFamily="@font/boogaloo"
        android:textSize="20dp"
        android:layout_marginTop="5dp"/>

    <EditText
        android:background="@drawable/boxtrans"
        android:layout_height="40dp"
        android:layout_width="200dp"
        android:textAlignment="center"
        android:layout_marginLeft="40dp"
        android:id="@+id/engtb"
        android:layout_marginTop="30dp"
        android:hint="English Word"/>

    <EditText
        android:background="@drawable/boxtrans"
        android:layout_height="40dp"
        android:layout_width="200dp"
        android:textAlignment="center"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/engtb"
        android:id="@+id/bistb"
        android:layout_marginTop="10dp"
        android:hint="Bisaya Word"/>

    <EditText
        android:background="@drawable/boxtrans"
        android:layout_height="40dp"
        android:layout_width="200dp"
        android:textAlignment="center"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/bistb"
        android:id="@+id/prunoun"
        android:layout_marginTop="10dp"
        android:hint="Prunounciation"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Audio Visual"
        android:textColor="@color/dirty"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/prunoun"
        android:fontFamily="@font/boogaloo"
        android:textSize="20dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/dirty"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/attach_effect"
        android:id="@+id/info_effect"/>
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/remove"
        android:layout_below="@id/info_audio"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/dirty"
        android:id="@+id/none"/>

    <Button
        android:background="@drawable/button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Audio"
        android:layout_marginLeft="100dp"
        android:id="@+id/attach"
        android:layout_marginTop="205dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="" android:id="@+id/info"
        android:layout_marginTop="325dp"/>

    <ImageView
        android:background="@drawable/cam"
        android:layout_height="220dp"
        android:layout_width="220dp"
        android:layout_marginLeft="350dp"
        android:layout_below="@id/spin"
        android:id="@+id/image"
        android:layout_marginTop="10dp"/>

    <Button
        android:background="@drawable/button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="CANCEL"
        android:layout_marginLeft="480dp"
        android:layout_below="@id/image"
        android:layout_marginTop="10dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:onClick="menu"/>

    <Button
        android:background="@drawable/button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Add Word"
        android:layout_marginLeft="350dp"
        android:layout_below="@id/image"
        android:id="@+id/addData"
        android:layout_marginTop="10dp"
        android:backgroundTint="@android:color/holo_green_dark"/>

    <RelativeLayout
        android:background="@drawable/button"
        android:layout_height="40dp"
        android:layout_width="220dp"
        android:layout_marginLeft="350dp"
        android:id="@+id/spin"
        android:layout_marginTop="10dp">

        <Spinner
            android:layout_height="40dp"
            android:layout_width="220dp"
            android:textAlignment="center"
            android:id="@+id/pos"/>

    </RelativeLayout>

</RelativeLayout>